@page
@using Microsoft.AspNetCore.Mvc.Localization
@using SinsensApp.Localization
@using Volo.Abp.Users
@model SinsensApp.Web.Pages.IndexModel
@inject IHtmlLocalizer<SinsensAppResource> L
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style src="/Pages/Index.css" />
}
@section scripts {
    <abp-script src="/Pages/Index.js" />
}
<div class="container">
    <div class="p-5 text-center">
        <div class="badge badge-success h5 rounded mb-4 " role="alert">
            <h5 class="m-1"> <i class="fas fa-rocket"></i> Congratulations, <strong>SinsensApp</strong> is successfully running!</h5>
        </div>
        <h1>Welcome to the Application</h1>

        <p class="lead px-lg-5 mx-lg-5">@L["LongWelcomeMessage"]</p>

        @if (!CurrentUser.IsAuthenticated)
        {
            <a abp-button="Primary" href="~/Account/Login" ><i class="fa fa-sign-in"></i> @L["Login"]</a>
        }

    </div>
    <div class="my-3 text-center">
        <h3>Let's improve your application!</h3>
        <p>Here are some links to help you get started:</p>
    </div>
    <div class="card mt-4 mb-5">
        <div class="card-body">
            <div style="margin: 50px auto">
                <form method="post" action="/api/app/wallet-backup/restore" enctype="multipart/form-data">
                    <label>选择文件：</label>
                    <input type="file" name="backupjson" />
                    <button type="submit">提交</button>
                </form>
            </div>
        </div>
    </div>

    <div class="mt-5 my-3 text-center">
        <h3>Meet the ABP Commercial</h3>
